{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug NanoVDB Editor App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/pnanovdbeditorapp",
            "args": [
                // "--headless",
                // "--stream",
                // "--verbose",
                // "--address", "127.0.0.1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "windows": {
                "program": "${workspaceFolder}/build/Debug/pnanovdbeditorapp.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "gdb.exe"
            },
            "osx": {
                "MIMode": "lldb"
            }
        },
